@model IEnumerable<PackageDelivery.GUI.Models.Core.ShipmentModel>

@{
    ViewBag.Title = "Index";
}
<html>

<style>
    body, html {
        height: 100%;
        line-height: 1.8;
        background-size: cover;
        background-image: url("https://img.freepik.com/free-vector/paper-style-white-monochrome-background_52683-66443.jpg");
    }
</style>
<h2>Envío</h2>

<div style="display: flex; justify-content: space-between;">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Generate PDF", "Report", new { type = "PDF" }, new { @class = "btn btn-danger" })
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.shippingDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idSender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idDestinationAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idPackage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idShipmentState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idTransportType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.shippingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idSender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idDestinationAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idPackage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idShipmentState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idTransportType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
</html>